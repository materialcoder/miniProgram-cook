/**index.wxss**/
.section-title {
  color: #666;
  font-size: 36rpx;
  font-weight: bold;
}

.section {
  width: 100%;
}

.flex-wrp {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.flex-item {
  width: 48%;
  height: 170px;
  text-align: center;
  font-size: 24rpx;
  box-sizing: border-box;
  margin: 5px 1%;
  background: #f8f8f8;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-pic {
  width: 120px;
  height: 120px;
  margin: 0 auto;
}